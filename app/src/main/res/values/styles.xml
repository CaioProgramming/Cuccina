<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/montserrat_alternates</item>
         <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="toolbarStyle">@style/AppToolbar</item>
    </style>


    <style name="AppToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:elevation">3dp</item>
        <item name="titleTextAppearance">@style/ToolbarTitle</item>
        <item name="backgroundColor">?android:colorBackground</item>
    </style>




    <style name="ToolbarTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="fontFamily">@font/italiana</item>
        <item name="android:textStyle">bold</item>
        <item name="android:capitalize">sentences</item>
    </style>


</resources>
