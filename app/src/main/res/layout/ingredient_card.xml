<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="ingrediente"
            type="com.inlustris.cuccina.beans.Ingredient" />
    </data>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_height="wrap_content"
        android:checkable="true"
        android:layout_width="match_parent"
        android:layout_marginBottom="4dp"
        app:checkedIcon="@drawable/ic_check_black_24dp"
        app:cardBackgroundColor="?android:colorBackground"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        app:checkedIconTint="?android:textColorPrimary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/ingrediente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bottom_line"
                android:backgroundTint="?android:textColorHint"
                android:paddingEnd="16dp"
                android:paddingBottom="4dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</layout>
