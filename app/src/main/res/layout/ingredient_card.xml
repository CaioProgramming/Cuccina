<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="ingrediente"
            type="com.inlustris.cuccina.beans.Ingredient" />
    </data>

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/bottom_line"
            app:cardBackgroundColor="?android:textColorHint"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp">

            <androidx.emoji.widget.EmojiTextView
                android:id="@+id/ingredientemoji"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline3" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/ingrediente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:text="@{ingrediente.ingrediente}"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

        <TextView
            android:id="@+id/ingredienteinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ingrediente"
            android:text="@{ingrediente.quantidade}"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1" />
    </LinearLayout>
</layout>
