<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp"
    android:foreground="?attr/selectableItemBackground"
     xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
     android:layout_margin="2dp"
     android:layout_height="wrap_content"
     android:layout_width="match_parent">
    <LinearLayout
         android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <ImageView
                android:foreground="?attr/selectableItemBackground"
                android:scaleType="centerCrop"
                android:background="@drawable/whiteripple"
                 android:contentDescription="food picture"
                android:foregroundTint="@color/colorAccent"
                android:id="@+id/pic"
                android:src="@drawable/ic_donut"
                android:layout_width="match_parent"
                android:layout_height="200dp" />
        <LinearLayout
            android:background="@color/transparent"
            android:layout_margin="1dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="20sp"
                android:padding="5dp"
                android:textStyle="bold"
                android:id="@+id/receita"
                 android:text="Brigadeiro de panela com canela"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="362/kcal"
                    android:padding="10dp"
                    android:id="@+id/calorias"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_whatshot_black_24dp"
                    android:textColor="@color/md_grey_300"
                    android:textSize="16sp" />

                <TextView
                    android:text="1 hora"
                    android:padding="10dp"
                    android:id="@+id/tempo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_query_builder_black_24dp"
                    android:textColor="@color/md_grey_300"
                    android:textSize="16sp" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>



</android.support.v7.widget.CardView>