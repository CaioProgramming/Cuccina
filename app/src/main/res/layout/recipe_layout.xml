<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/md_white_1000"
    app:cardElevation="1dp"
    app:cardCornerRadius="10dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/pic"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_donut"
        android:layout_width="match_parent"
        android:layout_height="200dp" />
        <LinearLayout
            android:orientation="vertical"
            android:padding="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:id="@+id/receita"
            android:padding="5dp"
            android:textColor="@color/md_black_1000"
            android:textSize="26sp"
            android:textAlignment="center"
            android:text="receita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginStart="10dp"
            android:drawableStart="@drawable/ic_query_builder_black_24dp"
            android:id="@+id/tempo"
            android:padding="5dp"
            android:textColor="@color/md_grey_600"
            android:textSize="16sp"
            android:textAlignment="center"
            android:text="5 minutos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:padding="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:id="@+id/ingredientscount"
                android:padding="5dp"
                android:textColor="@color/md_black_1000"
                android:text="10 ingredientes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/calories"
                android:padding="5dp"
                android:textColor="@color/md_red_800"
                android:text="160 kcal/100g"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <Button
            android:id="@+id/startrecipe"
            android:textColor="@color/md_white_1000"
            android:background="@drawable/button_pressed"
            android:text="Fazer receita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</android.support.v7.widget.CardView>