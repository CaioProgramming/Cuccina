<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20dp"
    android:layout_gravity="center"
    android:background="@drawable/whiteripple"
    app:cardBackgroundColor="@color/md_white_1000"
    app:cardElevation="5dp"
    android:id="@+id/card"
    app:cardCornerRadius="20dp"
    android:layout_height="350dp">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:contentDescription="food picture"
            android:foreground="?attr/selectableItemBackground"
            android:foregroundTint="@color/md_white_1000"
            android:background="@drawable/whiteripple"
            android:id="@+id/pic"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_donut"
            android:layout_width="match_parent"
            android:layout_height="350dp" />
        <RelativeLayout
            android:padding="5dp"
            android:background="@drawable/gradient"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_below="@id/receita"
                 android:layout_margin="5dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginEnd="15dp"
                    android:padding="5dp"
                    android:drawableStart="@drawable/ic_whatshot_black_24dp"
                    android:textSize="16sp"
                    android:textColor="@color/md_white_1000"
                    android:id="@+id/calorias"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:padding="5dp"
                    android:drawableStart="@drawable/ic_query_builder_black_24dp"
                    android:textSize="16sp"
                    android:textColor="@color/md_white_1000"
                    android:id="@+id/tempo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

            <TextView
                android:textStyle="bold"
                android:id="@+id/receita"
                android:padding="15dp"
                android:textColor="@color/md_white_1000"
                android:textSize="26sp"
                android:text="receita"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:padding="5dp"
                android:id="@+id/startrecipe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/receita"
                android:layout_centerVertical="true"
                android:layout_marginEnd="17dp"
                android:background="@drawable/whiteripple"
                android:text="Fazer receita"
                android:textColor="@color/md_white_1000" />
        </RelativeLayout>


    </RelativeLayout>
</android.support.v7.widget.CardView>