<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
     android:layout_gravity="center"
    android:id="@+id/card"
    app:cardCornerRadius="10dp"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@color/lblack"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:scaleType="centerCrop"
             android:background="@drawable/whiteripple"
            android:adjustViewBounds="true"
            android:contentDescription="food picture"
            android:foreground="?attr/selectableItemBackground"
            android:foregroundTint="@color/md_white_1000"
            android:id="@+id/pic"
            android:src="@drawable/ic_donut"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <RelativeLayout
             android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                 android:layout_margin="15dp"
                 android:textStyle="bold"
                android:id="@+id/receita"
                android:padding="10dp"
                android:textColor="@color/md_white_1000"
                android:textSize="32sp"
                android:text="Brigadeiro de panela com canela"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_margin="10dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/receita"
                 android:gravity="start"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                     android:textSize="12sp"
                    android:id="@+id/calorias"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:drawableStart="@drawable/ic_query_builder_black_24dp"
                    android:textSize="12sp"
                    android:id="@+id/tempo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>


        </RelativeLayout>

        <Button
            android:layout_alignParentBottom="true"
            android:background="@drawable/round_top"
            android:id="@+id/startrecipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fazer receita"
            android:foreground="?attr/selectableItemBackground"
            android:textColor="@color/colorPrimary" />
    </RelativeLayout>
</LinearLayout>