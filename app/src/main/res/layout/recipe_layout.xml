<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:layout_gravity="center"
    android:id="@+id/card"
    app:cardCornerRadius="10dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:background="@drawable/whiteripple"
            android:adjustViewBounds="true"
            android:contentDescription="food picture"
            android:foreground="?attr/selectableItemBackground"
            android:foregroundTint="@color/md_white_1000"
            android:id="@+id/pic"
            android:src="@drawable/ic_donut"
            android:layout_width="150dp"
            android:layout_height="150dp" />
        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                 android:textStyle="bold"
                android:id="@+id/receita"
                android:padding="5dp"
                android:textColor="@color/md_black_1000"
                android:textSize="18sp"
                android:text="receita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:background="@drawable/bottom_line"

                android:gravity="start"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:drawableStart="@drawable/ic_whatshot_black_24dp"
                    android:textSize="12sp"
                    android:id="@+id/calorias"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:drawableStart="@drawable/ic_query_builder_black_24dp"
                    android:textSize="12sp"
                    android:id="@+id/tempo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

            <Button
                android:background="@color/transparent"
                android:id="@+id/startrecipe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fazer receita"
                android:foreground="?attr/selectableItemBackground"
                android:textColor="@color/colorPrimary" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>