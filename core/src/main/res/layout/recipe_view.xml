<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/padding_default_16dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:stateListAnimator="@animator/scale_down_animator"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp">


        <ImageView
            android:id="@+id/recipe_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:importantForAccessibility="no"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />


    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/recipe_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="start"
        android:maxLines="2"
        android:paddingVertical="@dimen/padding_small_8dp"
        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
        android:textStyle="bold"
        android:transitionName="RecipeName"
        tools:text="Bolo de chocolate" />

    <TextView
        android:id="@+id/recipe_description"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="start"
        android:maxLines="2"
        android:paddingBottom="@dimen/padding_small_8dp"
        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
        android:transitionName="RecipeName"
        tools:text="Bolo de chocolate com caulda de chocolate e recheado com leite condensado" />

</LinearLayout>
